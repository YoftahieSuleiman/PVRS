
@model University.Models.User

@{
    ViewBag.Title = "Reset";
}
@{
    Layout = "";
}
<style type="text/css">
   
    #header {
        align-content: center;
        width: 68%; /* Set your desired with */
        z-index: 2; /* Make sure its above other items. */
        top: 30%;
        left: 35%;
        margin-top: -10%; /* Changes with height. */
        margin-left: -10%; /* Your width divided by 2. */
        /* You will not need the below, its only for styling   purposes. */
        padding: 10px;
        border: none;
        border-radius: 5px;
        text-align: center;
    }

    #reset {
        align-content: center;
        position: fixed;
        width: 20%; /* Set your desired with */
        z-index: 2; /* Make sure its above other items. */
        top: 30%;
        left: 25%;
        margin-top: -10%; /* Changes with height. */
        margin-left: -10%; /* Your width divided by 2. */
        /* You will not need the below, its only for styling   purposes. */
        padding: 10px;
        border: 1px solid #555555;
        color: white;
        border: 0;
        text-align: center;
        width: 840px;
        height: 540px;
      
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
    }
    .linkEffect {
        position: relative;
        display: inline-block;
        padding: 4px 6px;
        background-color: #faebd7;
        background-image: url('../images/bgLink.jpg');
        background-repeat: repeat;
        text-decoration: none;
        color: white;
        font-family: Tahoma, Geneva, sans-serif;
        font-weight: bold;
        border-radius: 3px;
        box-shadow: 0px 1px 4px -2px #333;
        text-shadow: 0px -1px #333;
        width: 90px;
        text-align: center;
    }

        .linkEffect:after {
            content: '';
            position: absolute;
            top: 2px;
            left: 2px;
            width: calc(100% - 4px);
            height: 50%;
            background: linear-gradient(rgba(255,255,255,0.8), rgba(255,255,255,0.1));
        }

        .linkEffect:hover {
            background: linear-gradient(darkred,red);
            color: lightblue;
        }
</style>
<body style="background-image: url('../images/bg2.jpg'); background-repeat: repeat">

    @using (Html.BeginForm("resetPassword", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
    <div id="reset" style="background-image: url('../images/loginbg.jpg'); background-repeat: repeat">
        
        <div align="center" style="margin-top:135px"><h1 style="color: darkred; font-style: italic; font-weight: bolder; font-size: 48px; text-shadow: 2px 2px #ff0000;">Human Resource Information System</h1></div>
        <div style="width:500px;overflow:auto;padding-left:150px;color:indianred">@TempData["ErrorMessage"]</div>

        <table align="center" style="font-weight: bold; color: black">
            <tr><td>User name</td><td><input type="text" name="username" /></td></tr>
            <tr><td colspan="2" align="center">&nbsp;</td></tr>
            <tr><td colspan="2" align="center"><input type="submit" value="   Reset   " class="linkEffect" style="border:0" /></td></tr>
            <tr>
                <td colspan="2" align="left">
                    <br />
                    @Html.ActionLink("Log In", "Login", "Home")




                </td>
            </tr>
        </table>
    </div>
    }

    </body>




