@model University.Models.User


@{
    ViewBag.Title = "Register";
    Layout = null;
}
<style type="text/css">
    

    #header {
        align-content: center;
        width: 68%; /* Set your desired with */
        z-index: 2; /* Make sure its above other items. */
        top: 30%;
        left: 35%;
        margin-top: -10%; /* Changes with height. */
        margin-left: -10%; /* Your width divided by 2. */
        /* You will not need the below, its only for styling   purposes. */
        padding: 10px;
        border: none;
        border-radius: 5px;
        text-align: center;
    }



    .linkEffect {
        position: relative;
        display: inline-block;
        padding: 4px 6px;
        background-color: #faebd7;
        background-image: url('../images/bgLink.jpg');
        background-repeat: repeat;
        text-decoration: none;
        color: white;
        font-family: Tahoma, Geneva, sans-serif;
        font-weight: bold;
        border-radius: 3px;
        box-shadow: 0px 1px 4px -2px #333;
        text-shadow: 0px -1px #333;
        width: 90px;
        text-align: center;
    }

        .linkEffect:after {
            content: '';
            position: absolute;
            top: 2px;
            left: 2px;
            width: calc(100% - 4px);
            height: 50%;
            background: linear-gradient(rgba(255,255,255,0.8), rgba(255,255,255,0.1));
        }

        .linkEffect:hover {
            background: linear-gradient(darkred,red);
            color: lightblue;
        }
  
</style>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "createUser", onsubmit = "return validateForm()" }))
    {
        @Html.AntiForgeryToken()

         @Html.ValidationSummary(true)
       
         <div style="color:red">
    @{
        if (TempData["ErrorMEssage"] != null)
        {
            Write(TempData["ErrorMEssage"]);
        }
    }
</div>
        <table align="center" style="color:black">
            <tr>
                <td><b>User Name &nbsp;</b></td>
                <td>
                    @Html.EditorFor(a => a.UserName)
                    @Html.ValidationMessageFor(model => model.UserName)
                </td>

            </tr>
            <tr><td colspan="2">&nbsp;</tr>
         
         
            <tr>
                <td>
                    <b>  User Group </b>
                </td>
                <td>
                    @Html.DropDownList("UserGroup")
                    @Html.ValidationMessageFor(model => model.UserGroup)
                </td>
            </tr>
            <tr><td colspan="2">
                    <div class="form-group" style="color:red" id="errormsg">

                    </div>
            </tr>

            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Next" class="linkEffect" style="border:0" />

                </td>

            </tr>
         </table>



    }
<script>

    function validateForm() {



        document.getElementById("errormsg").innerHTML = "";
        if (document.getElementById("UserName").value == "" || document.getElementById("UserGroup").value == "") {
            document.getElementById("errormsg").innerHTML = "Both fields are required.Please fill them.";
            return false;
        }
   

        return true;

    }
</script>